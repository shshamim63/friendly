<%= simple_form_for @comment, url: post_comments_path(post_id: post.id), method: :post do |comment| %>
  <%= comment.error_notification %>
  <div class='field'>
    <div class='control'>
      <%= comment.input :content, label: 'Create Comment', input_html: { class: "input" },
                  wrapper: false, label_html: {class: 'label'},
                  placeholder: "What is on your mind, #{current_user.username}",
                  autofocus: true %>
    </div>
  </div>

  <div class="field">
    <%= f.label 'Profile Photo' %><br />
    <%= f.file_field :image, autofocus: true %>
  </div>

  <%= comment.button :submit, 'Comment', class: 'button is-info is-pulled-right' %>
  <br>
  <br>
<% end %>
