<div class="columns is-centered">
  <div class=" box column is-two-fifths">
    <% @user.each do |user| %>
      <article class="media">
        <figure class="media-left">
          <p class="image is-64x64">
            <%= image_tag user_avatar(user, 25), class:"is-rounded" %>
          </p>
        </figure>
        <div class="media-content">
          <div class="content">
            <p>
              <strong class="name-index">  <%= link_to "#{ user.full_name}", user_path(id: user.id) %></strong>
              <br>

            </p>
          </div>
        </div>
        <div class="button-pos media-right">
          <%= render 'friendships/friend_status', user: user %>
        </div>
      </article>
    <% end %>
  </div>
</div>
