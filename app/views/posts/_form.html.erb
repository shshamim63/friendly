<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>
  <div class='field'>
    <div class='control'>
      <%= f.input :content, label: 'Create Post', input_html: { class: "textarea "},
                  wrapper: false, label_html: {class: 'label'},
                  placeholder: "What is on your mind, #{current_user.username}",
                  autofocus: true %>
    </div>
  </div>
  <%= f.button :submit, class: 'button is-info' %>
<% end %>
