<div class="is-centered top-space">
  <div class="box is-three-fifths">
    <% @user.each do |user| %>
    <!-- Main container -->
    <nav class="level">
        <!-- Left side -->
        <div class="level-left">
          <div class="level-item">
            <%= link_to user_path(id: user.id) do %>
              <figure class="image">
                <%= image_tag user_avatar(user, 25), class:"is-rounded" %>
              </figure>
              <span class= "ml">
                <%= user.full_name %>
              </span>
            <% end %>
          </div>
        </div>

        <!-- Right side -->
        <div class="level-right">
            <%= render 'friendships/friend_status', user: user %>
        </div>
    </nav>
    <% end %>
  </div>
</div>
