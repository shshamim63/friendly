<% @user.each do |user| %>
  <article class="media">
    <div class="media-left">
      <figure class="image">
        <%= image_tag user_avatar(user, 40), class: 'is-rounded' %>
      </figure>
    </div>
    <div class="media-content top-margin">
      <div class="content">
        <p>
            <strong> <%= link_to "#{user.full_name}", user_path(id: user.id) %></strong>
        </p>
      </div>
    </div>
  </article>
  <%= render 'friendships/friend_status', user: user %>
<% end %>
