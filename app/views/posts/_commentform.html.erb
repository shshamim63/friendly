<%= simple_form_for( model: comment, local: true ) do |f| %>
  <%= f.error_notification %>
  <div class='field'>
    <div class='control'>
      <%= f.input :content, label: 'Create Comment', input_html: { class: "textarea "},
                  wrapper: false, label_html: {class: 'label'},
                  placeholder: "What is on your mind, #{current_user.username}",
                  autofocus: true %>
    </div>
  </div>
  <%= f.button :submit, class: 'button is-info is-pulled-right' %>
  <br>
  <br>
<% end %>
