<div  class="navbar-item has-dropdown is-hoverable">
  <div class="dropdown-trigger">
    <button class="button is-info" aria-haspopup="true" aria-controls="dropdown-menu3">
      <span class="icon">
        <i class="fas fa-sort-down is-darker"></i>
      </span>
    </button>
  </div>
  <div class="navbar-dropdown is-right">
    <% like_route, like_method = liker(object.class.name, object.id, 'like') %>
    <%= link_to '<i class="fas fa-thumbs-up"></i>'.html_safe, like_route, method: like_method %>

    <% dislike_route, dislike_method = liker(object.class.name, object.id, 'dislike') %>
    <%= link_to '<i class="fas fa-thumbs-down"></i>'.html_safe, dislike_route, method: dislike_method %>

    <% laugh_route, laugh_method = liker(object.class.name, object.id, 'laugh') %>
    <%= link_to '<i class="fas fa-grin-squint"></i>'.html_safe, laugh_route, method: laugh_method %>
  </div>
</div>
