<% simple_form_for( new_post_comment_path( post ) ) do |comment| %>
  <%= comment.error_notification %>
  <div class='field'>
    <div class='control'>
      <%= comment.input :content, label: 'Create Comment', input_html: { class: "textarea "},
                  wrapper: false, label_html: {class: 'label'},
                  placeholder: "What is on your mind, #{current_user.username}",
                  autofocus: true %>
    </div>
  </div>
  <%= comment.button :submit, class: 'button is-info is-pulled-right' %>
  <br>
  <br>
<% end %>
