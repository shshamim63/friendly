<% friends = user.friends %>
<div class="">
  <p>Friends(<%= friends.count %>)</p>
  <% friends.each do |friend| %>
    <article class="media">
      <div class="media-left">
        <figure class="image is-64x64">
          <%= image_tag friend.avatar(resource, 100), class: 'rounded' %>
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <p>
            <small><%=  %></small
              <strong> <%= link_to "#{friend.username}", user_path(id: friend.id) %></strong>
          </p>
        </div>
      </div>
    </article>
  <% end %>
</div>
